<div class="question">
  <h2>Red Box</h2>
  <div id="red-box"></div>
</div>

<script>

  $(function() {
    $('#red-box').click(function(){
     $(this).addClass("move");
     var removeGreenCircle = function() {
      $(this).css("background-color", "blue");
        $(this).removeClass("move");
      }
      setTimeout(removeGreenCircle.bind(this), 1000);
     });

  });

</script>

